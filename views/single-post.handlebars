{{> post-info post}}

{{#if loggedIn}}
<form class="comment-form">
  <div>
    <textarea name="comment-body"></textarea>
  </div>

  <div>
    <button type="submit">add comment</button>
    {{> rating }}
    
    
  </div>
</form>
{{/if}}

{{!-- {{> comments post.comments}} --}}
<div class="comments">
  {{#each post.comments}}
  <section class="comment">
    <div class="meta">
      {{user.username}} on {{format_date created_at}}
    </div>
    <div class="text">
      {{comment_text}}
      {{#if loggedIn}}
      <button type="button" class="upvote-btn">upvote</button>
      {{/if}}
      {{!-- <div class="vote-count-number"> --}}
        {{comment.vote_count}}
      {{!-- </div> --}}
       
      {{#if loggedIn}}
      <button type="button" class="downvote-btn">downvote</button>
      {{/if}}
    </div>
  </section>
  {{/each}}
</div>

{{#if loggedIn}}
<script src="/javascript/comment.js"></script>
<script src="/javascript/upvote.js"></script>
<script src="/javascript/downvote.js"></script>
<script src="/javascript/rating-vote.js"></script>
{{/if}}